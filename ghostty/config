# Pastel theme - soft, easy on the eyes
theme = pastel

maximize = true

# Background transparency and blur - soft and easy on the eyes
background-opacity = 0.85
background-blur = true

# Block cursor with mint color
cursor-style = block
cursor-color = #7dd3c0
cursor-style-blink = true
shell-integration-features = no-cursor
quick-terminal-position = center
quick-terminal-size = 80%, 80%



keybind = super+t=unbind
keybind = global:cmd+backslash=toggle_quick_terminal
keybind = super+shift+t=new_tab
macos-option-as-alt = true
